@using System.Net.Http;
@using Microsoft.AspNetCore;
@using Newtonsoft.Json;
@{
    var webApiUrl = ""; //Configuration.GetValue<string>("WebApiUrl");
    var webApiVUrl = ""; //Configuration.GetValue<string>("WebApiVUrl");
    var userToken = ""; //Context.User.Claims.Where(c => c.Type == "Token").FirstOrDefault().Value;
    var userName = ""; //Context.User.Claims.Where(c => c.Type == "Username").FirstOrDefault().Value;
    var userId = ""; //Context.User.Claims.Where(c => c.Type == "UserId").FirstOrDefault().Value;
    var email = ""; //Context.User.Claims.Where(c => c.Type == "Email").FirstOrDefault().Value;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>DIAS.Project</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <link rel="stylesheet" href="~/css/vendor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Site.css" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />

    <script src="~/js/vendor.js" asp-append-version="true"></script>
    <script src="~/js/devextreme/localization/dx.messages.tr.js"></script>
    <script src="~/js/moment.js"></script>
    <script src="~/js/base.js"></script>
    <script src="~/js/pages/shared/shared.js"></script>

</head>
<body style="background-color: rgba(191, 191, 191, .15);">
    <script>
        DevExpress.localization.locale(navigator.language);
        DevExpress.config(
            {
                defaultCurrency: "TRY",
                editorStylingMode: "filled"
            });
        moment.locale('tr');
        sessionStorage.setItem("token", "Bearer " + '@userToken');
        sessionStorage.setItem("userName", '@userName');
        sessionStorage.setItem("userId", '@userId');
        sessionStorage.setItem("webApiUrl", '@webApiUrl');
        sessionStorage.setItem("webApiVUrl", '@webApiVUrl');
        sessionStorage.setItem("email", '@email');
    </script>
    @RenderBody()
</body>

</html>
