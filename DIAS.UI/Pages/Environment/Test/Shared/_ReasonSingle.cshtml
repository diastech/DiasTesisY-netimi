@(Html.DevExtreme()
    .DropDownBox()
    .ID("dropDownReasonSingle")
    .DataSource(
        new JS("Reason.reasonDataSourceSingle()")
    )
    .ValueExpr("reasonCategoryHierarchy")
    .DisplayExpr("reasonCategoryName")
    .DropDownOptions(o => o.Height(350))
    .Placeholder("Arama sebebi seçiniz..")
    .ShowClearButton(true)
    .OnValueChanged("Reason.treeBox_valueChanged")
    .ContentTemplate(
        @<text>
            @await Html.PartialAsync("_ReasonTreeViewSingle")
        </text>
    )
)