@(Html.DevExtreme().DataGrid().ID("gridFastTicketRedirect")
    .ShowBorders(true)
    .Selection(s => s.Mode(SelectionMode.Single))
    .Columns(c => {
        c.Add().Caption("ID").DataField("id").Visible(false);
        c.Add().Caption("İş Emri Sahibi").DataField("insertUser");
        c.Add().Caption("Telefon").DataField("cellNumber").CustomizeText(@<text> Base.formatPhoneNumber </text>);
        c.Add().Caption("Tarih").DataField("insertDate").DataType(GridColumnDataType.Date).Format("dd/MM/yyyy HH:mm:ss").Alignment(HorizontalAlignment.Center);
        c.Add().Caption("Açıklama").DataField("description");
        c.Add().Caption("Durum").DataField("basicTicketState");
        c.Add()
            .Caption("İşlemler")
            .Width(65)
            .Type(GridCommandColumnType.Buttons)
            .Alignment(HorizontalAlignment.Right)
            .Buttons(btns =>
            {
                btns.Add()
                    .Name("grd_btnFastTicketDetails")
                    .Icon("fas fa-share")
                    .OnClick("FastTicketsRedirect.grd_btnFastTicketRedirectClick")
                    .Hint("Yönlendir");
            });
    })
    .OnSelectionChanged("FastTicketsRedirect.grd_selectionChanged")
)

<style>

    #gridFastTicketRedirect {
        padding-top: 10px;
    }

</style>